{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-extra-semi": 1,
        "arrow-parens": [
            2,
            "as-needed"
        ],
        "arrow-body-style": [
            2,
            "as-needed"
        ]
    },
    "env": {
        "node": true,
        "amd": true,
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended"
}
